# GPT-OSS Environment Configuration
# Copy this file to .env and update with your values

# ==========================================
# GPU Configuration
# ==========================================
# Find your GPU ID with: nvidia-smi -L
NVIDIA_VISIBLE_DEVICES=GPU-3143337d-5132-41c1-9381-33b56ef28990
CUDA_VISIBLE_DEVICES=GPU-3143337d-5132-41c1-9381-33b56ef28990

# ==========================================
# Model Configuration
# ==========================================
# Path to your GGUF model file
MODEL_PATH=D:/llama_model/gpt-oss-20b-UD-Q8_K_XL.gguf
MODEL_NAME=gpt-oss-20b

# Model parameters
CONTEXT_LENGTH=131072
GPU_LAYERS=999
MAX_PREDICT=2048

# ==========================================
# Database Configuration
# ==========================================
# Neo4j
NEO4J_USERNAME=neo4j
NEO4J_PASSWORD=password123
NEO4J_URI=bolt://neo4j:7687

# PostgreSQL (when ready to switch from SQLite)
# DATABASE_URL=postgresql://gptoss:gptoss123@postgres:5432/gptoss
POSTGRES_USER=gptoss
POSTGRES_PASSWORD=gptoss123
POSTGRES_DB=gptoss

# ==========================================
# Security Configuration
# ==========================================
# Generate with: openssl rand -hex 32
SECRET_KEY=your-secret-key-change-in-production
JWT_SECRET=your-jwt-secret-change-in-production

# ==========================================
# Application Settings
# ==========================================
LOG_LEVEL=INFO
MAX_UPLOAD_SIZE=104857600  # 100MB in bytes
ALLOWED_EXTENSIONS=pdf,docx,xlsx,txt,md,jpg,jpeg,png

# CORS Origins (comma-separated)
CORS_ORIGINS=http://localhost:3000,http://localhost:5173,http://localhost:8000

# ==========================================
# Service URLs
# ==========================================
LLM_API_URL=http://llama:8080
CHROMA_HOST=chroma
CHROMA_PORT=8000
BACKEND_URL=http://localhost:8000
FRONTEND_URL=http://localhost:3000

# ==========================================
# Development Settings
# ==========================================
DEBUG=false
RELOAD=true